extends layout
block append main
 .left
   .ManUv
     h3 TOOLS 
   .ManUv
     h4 
      | #{ uid }    
 .right
    form(action='/add_case', method='POST')
     div(class="input-group mb-3")
      span(class="input-group-text col-3" id="inputGroup-sizing-default") Created by  
      input(type="text" name="txtUID" class="form-control" aria-label="Project Name" aria-describedby="inputGroup-sizing-default" value=uid required)
     div(class="input-group mb-3")
      span(class="input-group-text col-3" id="inputGroup-sizing-default") Project Name
      input(type="text" name="txtProjectName" class="form-control" aria-label="Project Name" aria-describedby="inputGroup-sizing-default" required)
     div(class="input-group mb-3")
      span(class="input-group-text col-3") Description
      textarea(class="form-control" aria-label="With textarea" name="description")
     div(class="input-group mb-3")
      label(class="input-group-text col-3" for="inputGroupSelect01") Type
      select( class="form-select" id="inputGroupSelect01" name="cbxType")
        option(value="") -- Select Type --
        option(value="Hardware") Hardware
        option(value="Software") Software
     div(class="input-group mb-3")
      input(id=submit, type='submit', class="btn btn-primary", value='Submit')     
      



